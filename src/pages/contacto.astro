---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Icon } from 'astro-icon/components';

const button =[(name:"aceptar"),(name:"enviar"),(name:"cancelar"),(name:"otro")];
---

<Layout tittle="Contacta con nosotros :D">
    Contacta con nosotros
    <Button del="true">
        <span slot="text">
        Boton 1
        </span>
        <svg slot="end-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="m7.49 12-3.75 3.75m0 0 3.75 3.75m-3.75-3.75h16.5V4.499" />
          </svg>
          
    </Button>
        
    <Button>
        <svg slot="start-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
          </svg>
    </Button>

<Icon class="text-yellow-600" name="lamborghini" size="56" />
<Icon name="mdi:gas-station-in-use-outline" size="56"/>
<Icon name="mdi:car" size="65" />
<Icon name="svg-spinners:wind-toy" size="65" />
<Icon name="svg-spinners:pulse-rings-multiple" size="65"/>

{button.map((text)=>{
    return <Button>
        <span slot="text">text.name</span></Button>
})}

</Layout>